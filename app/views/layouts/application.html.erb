<!DOCTYPE html>
<html>
  <head>
    <title>CookiesSessionLesson</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <h1>Pirate.ly</h1>
    <nav>
      <div class='nav-list'>
        <% if current_user %>
          <p><%= link_to "Treasures", treasures_path %></p>
          <p><%= link_to "Log Out", logout_path %></p>
        <% else %>
          <p><%= link_to "Sign Up", signup_path %></p>
          <p><%= link_to "Log In", login_path %></p>
        <% end %>
      </div>
    </nav>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg.html_safe %>
    <% end %>

    <%= yield %>
  </body>
</html>
